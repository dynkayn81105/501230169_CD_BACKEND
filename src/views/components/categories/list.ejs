<div class="content">
  <div class="container-fluid">
    <div class="flex item-center justify-content-between mb-5">
       <h4 class="page-title">Danh sach san pham</h4>
       <a class="btn btn-default" href="/categories/create">Tạo loại sản phẩm</a>
    </div>
   
    <div class="card">
      <div class="card-header">
        <div class="card-title">Table Head States</div>
      </div>
      <div class="card-body">
        <table class="table table-head-bg-success">
          <thead>
            <tr>
              <th scope="col">Stt</th>
              <th scope="col">Image</th>
              <th scope="col">Code</th>
              <th scope="col">Name</th>
              <th scope="col"></th>
            </tr>
          </thead>
          <tbody>
            <% categories.forEach(function(category,index){%>
            <tr>
              <td><%=index+1%></td>
              <td>
                <img src="<%=category.image%>" alt="image" class="category-label"/>
              </td>
              <td><%=category.code%></td>
              <td><%=category.name%></td>
              <td><a class="btn btn-primary btn-sm" href="/categories/update/<%=category._id%>">Sửa</a></td>
            </tr>
            <% });%>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
